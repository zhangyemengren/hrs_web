---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
---

<Layout title="Login Page">
    <main>
        <div>login</div>
        <form id="form">
            <label>
                <input type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs input-sm" />
            </label>
            <button type="submit" class="btn btn-outline btn-info btn-sm">submit</button>
        </form>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
</style>

<script>
    const form = document.getElementById('form');
    form.addEventListener("submit", (e) => {
        e.preventDefault();
        const formData = new FormData(form as HTMLFormElement);
        const username = formData.get('username');
        console.log(username);
        for (let value of formData.values()) {
            console.log(value);
        }
    });
</script>

